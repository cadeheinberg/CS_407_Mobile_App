<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"

    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <CheckBox
            android:id="@+id/taskToDoCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/holo_purple">
        </CheckBox>
        <TextView
            android:id="@+id/taskTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Text"
            android:background="@null"
            android:layout_toEndOf="@+id/taskToDoCheckBox"
            android:textSize="18dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="2dp" />
        <TextView
            android:id="@+id/taskLocationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Text"
            android:background="@null"
            android:layout_toEndOf="@+id/taskToDoCheckBox"
            android:layout_below="@id/taskTitleText"
            android:textSize="12dp"
            android:textColor="#8030B8" />
        <TextView
            android:id="@+id/taskLocationDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:background="@null"
            android:layout_toEndOf="@+id/taskLocationName"
            android:layout_below="@id/taskTitleText"
            android:textSize="12dp"
            android:textColor="#8030B8" />
        <TextView
            android:id="@+id/taskStartDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Text"
            android:background="@null"
            android:layout_toEndOf="@+id/taskLocationDivider"
            android:layout_below="@id/taskTitleText"
            android:textSize="12dp"
            android:textColor="#8030B8"
            android:layout_marginLeft="6dp"
            />
        <TextView
            android:id="@+id/taskDateDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:background="@null"
            android:layout_toEndOf="@+id/taskStartDateText"
            android:layout_below="@id/taskTitleText"
            android:textSize="12dp"
            android:textColor="#8030B8"
            android:layout_marginLeft="4dp"
            />
        <TextView
            android:id="@+id/taskEndDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Text"
            android:background="@null"
            android:layout_toEndOf="@+id/taskDateDivider"
            android:layout_below="@id/taskTitleText"
            android:textSize="12dp"
            android:textColor="#8030B8"
            android:layout_marginLeft="4dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>